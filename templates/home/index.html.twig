{% extends 'base.html.twig' %}

{% block title %}Installation Check{% endblock %}

{% block body %}
    <div class="flex min-h-screen flex-col justify-center overflow-hidden bg-slate-900 py-6 sm:py-12">
        <div class="bg-slate-800 px-6 pt-10 pb-8 shadow-xl mx-auto rounded-lg">
            <div class="mx-auto max-w-md">
                <div class="space-y-6 py-8 text-base leading-7 text-slate-200">
                    <h1 class="font-bold text-xl text-center">Installation check</h1>
                    <ul class="space-y-4">
                        <li class="flex items-center">
                            <svg class="h-6 w-6 flex-none fill-transparent stroke-green-500 stroke-2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="11"/>
                                <path d="m8 13 2.165 2.165a1 1 0 0 0 1.521-.126L16 9" fill="none"/>
                            </svg>
