{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
<div class="flex flex-col flex-grow w-screen items-center p-5">
    <div class="flex flex-col w-4/5 md:w-3/5 lg:w-2/5 items-center shadow-lg shadow-gray-800 border bg-slate-100 py-5">

        <div class="flex">
            <h1 class="text-2xl font-bold text-yellow-800">Nous contacter</h1>
        </div>
        {% for message in app.flashes('success') %}
			<div class="bg-green-500 font-bold text-white px-3 py-1 rounded">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('warning') %}
			<div class="bg-red-500 font-bold text-white px-3 py-1 rounded">
				{{ message }}
			</div>
		{% endfor %}
    {{ form_start(contactForm, {'attr': {'class': 'flex flex-col w-full gap-4 p-3'}}) }}
        <div class="flex flex-col">
            {{ form_label(contactForm.firstname )}}
            {{ form_widget(contactForm.firstname)}}
            {{ form_errors(contactForm.firstname)}}
        </div>
        <div class="flex flex-col">
            {{ form_label(contactForm.lastname)}}
            {{ form_widget(contactForm.lastname)}}
            {{ form_errors(contactForm.lastname)}}
        </div>
        <div class="flex flex-col">
            {{ form_label(contactForm.email)}}
            {{ form_widget(contactForm.email)}}
            {{ form_errors(contactForm.email)}}
        </div>
        <div class="flex flex-col">
            {{ form_label(contactForm.subject)}}
            {{ form_widget(contactForm.subject)}}
            {{ form_errors(contactForm.subject)}}
        </div>
        <div class="flex flex-col">
            {{ form_label(contactForm.content)}}
            {{ form_widget(contactForm.content)}}
            {{ form_errors(contactForm.content)}}
        </div>
    {{ form_end(contactForm) }}
    </div>
</div>


{% endblock %}
